{
  "name": "Bloc Popup",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "ðŸŽ‰ Bienvenue !"
    },
    {
      "type": "textarea",
      "id": "message",
      "label": "Message",
      "default": "Profitez de 10% avec le code BIENVENUE10"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton (optionnel)",
      "default": "Profitez-en"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton",
      "default": "/collections"
    },
    {
      "type": "range",
      "id": "delay",
      "label": "DÃ©lai avant affichage (secondes)",
      "min": 1,
      "max": 15,
      "step": 1,
      "default": 4
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur de fond",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur du texte",
      "default": "#000000"
    }
  ]
}
{% endschema %}
