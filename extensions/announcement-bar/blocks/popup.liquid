{% comment %}
  Bloc Popup configurable
{% endcomment %}

<style>
  .custom-popup-wrapper {
    display: none;
    position: fixed;
    top: 0; left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.5);
    z-index: 9999;
    align-items: center;
    justify-content: center;
  }

  .custom-popup-wrapper.active {
    display: flex;
  }

  .custom-popup-content {
    background-color: {{ block.settings.bg_color }};
    color: {{ block.settings.text_color }};
    padding: 30px;
    border-radius: 10px;
    text-align: center;
    width: 90%;
    max-width: 400px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    position: relative;
    animation: fadeIn 0.5s ease-in-out;
  }

  .custom-popup-close {
    position: absolute;
    top: 10px;
    right: 15px;
    background: transparent;
    border: none;
    font-size: 22px;
    color: {{ block.settings.text_color }};
    cursor: pointer;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
  }
</style>

<div class="custom-popup-wrapper" id="popup-{{ block.id }}">
  <div class="custom-popup-content">
    <button class="custom-popup-close" onclick="document.getElementById('popup-{{ block.id }}').classList.remove('active');">Ã—</button>
    <h2>{{ block.settings.title }}</h2>
    <p>{{ block.settings.message }}</p>
    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" style="display:inline-block; margin-top:15px; background:#000; color:#fff; padding:10px 20px; border-radius:5px; text-decoration:none;">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

<script>
  setTimeout(function () {
    var popup = document.getElementById("popup-{{ block.id }}");
    if (popup) {
      popup.classList.add("active");
    }
  }, {{ block.settings.delay | default: 4 }} * 1000);
</script>

